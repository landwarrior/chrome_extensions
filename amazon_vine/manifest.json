{
    "manifest_version": 3,
    "name": "Amazon Vineの商品を見やすくする",
    "version": "1.0",
    "description": "Amazon Vineの商品を見やすくする",
    "permissions": ["activeTab", "storage"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://www.amazon.co.jp/vine/*"],
            "js": ["content.js"]
        }
    ]
}
